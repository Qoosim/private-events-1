<h1>Events</h1>

<table class="table is-hoverable is-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Date</th>
      <th>Creator</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <h1>Upcoming events: </h1>
    <% @upcoming_events.each do |event| %>
      <tr>
        <td><%= link_to event.title, event %></td>
        <td><%= event.description %></td>
        <td><%= event.date %></td>
        <td><%= event.creator.name %></td>
        <td><%= link_to 'Delete', event, method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

